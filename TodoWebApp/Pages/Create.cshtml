@page
@model TodoWebApp.Pages.CreateModel
@using TodoWebApp.Models
@{
    ViewData["Title"] = "Create";
}

<h1>Create new Todo Item</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TodoItem.TaskDescription" class="control-label"></label>
                <input asp-for="TodoItem.TaskDescription" class="form-control" />
                <span asp-validation-for="TodoItem.TaskDescription" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="TodoItem.IsCompleted" class="form-check-input" />
                <label asp-for="TodoItem.IsCompleted" class="form-check-label"></label>
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Priority</label>
                <select class="form-control" asp-for="TodoItem.Priority" asp-items="Html.GetEnumSelectList<PriorityLevel>()">
                    <option value="">Choose a priority</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" id="SubmitTodo" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
